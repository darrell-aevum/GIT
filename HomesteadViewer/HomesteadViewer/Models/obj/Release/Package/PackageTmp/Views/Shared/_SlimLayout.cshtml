@using HomesteadViewer
@{
    var user = HomesteadViewer.SiteUtilities.UserSession.GetCurrentUser();
}
<!DOCTYPE html>
<html>
<head>
    <title>Homestead Viewer</title>

    <!-- Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <link rel="stylesheet" href="/content/theme/styles.css">
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600' rel='stylesheet' type='text/css'>
    <link href="~/Content/kendo/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/kendo.common-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/kendo.metro.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/kendo.dataviz.metro.min.css" rel="stylesheet" />
    <link href="~/Content/kendo/kendo.metro.mobile.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/enquire.js"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>
    <script src="~/Scripts/jquery.nicescroll.min.js"></script>
    <script src="~/Scripts/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo.aspnetmvc.js"></script>
    <script src="~/Scripts/application.js"></script>
    <script src="~/Scripts/ZeroClipboard.min.js"></script>
    <script src="~/Scripts/Site.js"></script>
</head>
<body>

    <!-- Start Content -->
    <div class="container-fluid">
            <div id="content">
                @RenderBody() 
                <div id="window" style="display: none;"></div>
                <!-- End Content -->
            </div>
    </div>
    <script type="text/javascript">
        $(window).resize(function () {
            $('#content').css('min-height', (window.innerHeight-55) + 'px');
        });
    </script>
</body>
</html>